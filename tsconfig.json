{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext"],
    "module": "ESNext",
    "noImplicitOverride": true,
    "outDir": "./build",
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types/express"],
    "resolveJsonModule": true,
    "paths": {
      "@database/*": ["database/*"],
      "@functions/*": ["functions/*"],
      "@handler/*": ["server/routes/handler/*"],
      "@middleware/*": ["server/middleware/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "rules": {
    "orderedImports": [true]
  }
}
